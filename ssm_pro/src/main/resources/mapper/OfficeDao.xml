<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sfturing.dao.OfficeDao">
	<!-- 通过医院名称地区信息 -->
	<select id="findOfficeByHosName" resultType="cn.sfturing.entity.Office"
		parameterType="java.lang.String">
		SELECT
		* FROM `hos_office`
		WHERE hospital_name =
		#{hospitalName}
	</select>
	
	<!-- 通过ID地区信息 -->
	<select id="findOfficeById" resultType="cn.sfturing.entity.Office"
		parameterType="int">
		SELECT
		* FROM `hos_office`
		WHERE id =
		#{id}
	</select>

	<!--推荐科室 -->
	<select id="findOfficeByRe" resultType="cn.sfturing.entity.Office" parameterType="java.util.Map">
		SELECT *
		FROM `hos_office`
		WHERE 1=1 AND hospital_name in
		<foreach item="hospital" index="index" collection="list" open="("
			separator="," close=")">
			#{hospital.hospitalName}
		</foreach>
		limit #{start},#{size}
	</select>
	<!--推荐科室数量 -->
	<select id="findOfficeByReNum" resultType="java.lang.Integer" >
		SELECT COUNT(*)
		FROM `hos_office`
		WHERE 1=1 AND hospital_name in
		<foreach item="hospitalName" index="index" collection="list" open="("
			separator="," close=")">
			#{hospitalName.hospitalName}
		</foreach>
	</select>
	
	<!-- 查询全部支持预约科室的数量 -->
	<select id="findOrderOfficeNum" resultType="java.lang.Integer" parameterType="cn.sfturing.entity.Office">
		SELECT count(*) FROM
		`hos_office`
			where 1 = 1 
		<if test="hospitalName != null">
			AND hospital_name LIKE '%${hospitalName}%'
		</if>
		<if test="officesName != null">
			AND offices_name LIKE '%${officesName}%'
		</if>

	</select>
	
	<!--根据条件查询已开通预约的医院 -->
	<select id="findOfficeByCondition" resultType="cn.sfturing.entity.Office" parameterType="cn.sfturing.entity.Office">
		SELECT * FROM `hos_office`
		WHERE 1=1 
		<if test="hospitalName != null">
			AND hospital_name LIKE '%${hospitalName}%'
		</if>
		<if test="officesName != null">
			AND offices_name LIKE '%${officesName}%'
		</if>
		limit #{start},#{size}
		
	</select>


</mapper>